<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom Rounded Button Style -->
    <style name="RoundedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Rounded corners -->
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- Button color -->
        <item name="android:textColor">@android:color/white</item> <!-- Button text color -->
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- App Theme Style -->
    <style name="Theme.MyHealth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!-- Text Style -->
    <style name="TextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
